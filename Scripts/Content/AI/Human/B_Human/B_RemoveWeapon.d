func void B_RemoveWeapon(var C_Npc slf)
{
	// если я в боевом режиме
	if(!Npc_IsInFightMode(slf,FMODE_NONE))
	{
		// убрать оружие
		AI_RemoveWeapon(slf);
	};
};

